# Caddy JSON Configuration Example
# Alternative to Caddyfile format - use this if you prefer JSON config
#
# Set BACKEND_PORT and FRONTEND_PORT in your .env file, then update the ports below
#
# To use: Save as Caddyfile or convert to JSON and use with caddy adapt --config

{
    "apps": {
        "http": {
            "servers": {
                "srv0": {
                    "listen": [":80"],
                    "routes": [
                        {
                            "match": [
                                {
                                    "path": ["/ws/*"]
                                }
                            ],
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "localhost:3000"
                                        }
                                    ],
                                    "headers": {
                                        "request": {
                                            "set": {
                                                "Connection": ["Upgrade"],
                                                "Upgrade": ["websocket"]
                                            }
                                        }
                                    }
                                }
                            ],
                            "terminal": true
                        },
                        {
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "localhost:5173"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        }
    }
}
